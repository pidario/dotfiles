unmailboxes *
unvirtual-mailboxes *
set folder = "{{ .config.maildir }}/pidario"
set realname="{{ .config.name }}"
set from="{{ .config.email_3 }}"
set pgp_default_key="{{ .config.pgp_key_3 }}"
macro index S "<shell-escape>mbsync --all --config ~/.config/mbsync/pidario && notmuch new 2> /dev/null<enter>" "sync email"
set sendmail = "msmtp --file ~/.config/msmtp/pidario"
set header_cache = "~/.cache/mutt/pidario/header_cache"
set message_cachedir = "~/.cache/mutt/pidario/message_cache"
set spoolfile=+Inbox
set postponed=+Drafts
set record="+Sent"
set trash=+Trash
mailboxes =Inbox ="Drafts" ="Sent" ="Junk" ="Trash"
virtual-mailboxes "All" "notmuch://?query=path:pidario/** Mail AND NOT folder:pidario/Drafts AND NOT folder:pidario/Junk AND NOT folder:pidario/Trash"
