// -*- mode: jsonc -*-
{
	"include": [
		"~/.config/waybar/modules.jsonc"
	],
	"niri/workspaces": {
		"format": "{icon}",
		"format-icons": {
			// Icons by state
			"active": "",
			"default": ""
		}
	},
	"niri/window": {
		"format": "{}"
	},
	"niri/language": {
		"format": "{}",
		"format-en": "US",
		"format-it": "IT"
	},
	"modules-left": [
		"niri/workspaces",
		"wlr/taskbar",
		"niri/window"
	],
	"modules-center": [
		"mpd"
	],
	"modules-right": [
		"network",
		"idle_inhibitor",
		"pulseaudio",
		"power-profiles-daemon",
		"battery",
		"cpu",
		"memory",
		"tray",
		"custom/notification",
		"clock",
		"niri/language"
	]
}
